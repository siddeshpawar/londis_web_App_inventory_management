rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    // Allow read and write access only if the user is authenticated
    match /products/{productId} {
      allow read, create, update: if request.auth != null;
      allow delete: if false; // Disallow direct deletion, use 'isRemoved' flag instead
    }

    // Notifications collection - allow authenticated users to read (e.g., for in-app display)
    // Could also allow authenticated users to delete notifications once they're handled.
    match /notifications/{notificationId} {
      allow read, create, update, delete: if request.auth != null;
    }
  }
}